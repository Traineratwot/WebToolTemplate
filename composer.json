{
	"name"       :"traineratwot/web-tool-template",
	"version"    :"4.0.0",
	"authors"    :[
		{
			"name" :"Kirill",
			"email":"Traineratwot@yandex.ru"
		}
	],
	"license"    :"GPL-3.0-or-later",
	"type"       :"project",
	"scripts"    :{
		"up:release":"gh release create \"4.0.0\" --generate-notes"
	},
	"require"    :{
		"smarty/smarty"                 :"~3.1",
		"phpmailer/phpmailer"           :"^6.5",
		"bramus/router"                 :"~1.6",
		"gettext/gettext"               :"^5.6",
		"gettext/js-scanner"            :"^1.1",
		"gettext/php-scanner"           :"^1.3",
		"gettext/json"                  :"^1.0",
		"gettext/translator"            :"^1.0",
		"traineratwot/php-cli"          :"^1.1.5",
		"traineratwot/pdo-extended": "dev-master"
	},
	"require-dev":{
		"roave/security-advisories"    :"dev-latest",
		"jetbrains/phpstorm-attributes":"^1.0"
	},
	"autoload"   :{
		"files":[
			"core/model/main/Core.php",
			"core/model/main/Err.php",
			"core/model/main/Cache.php"
		],
		"psr-4":{
			"tables\\" :"core/classes/tables/",
			"traits\\" :"core/classes/traits/",
			"classes\\":"core/classes/",
			"model\\"  :"core/model/",
			"page\\"   :"core/views/",
			"ajax\\"   :"core/ajax/"
		}
	}
}
